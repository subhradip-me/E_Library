# E-Library Application Configuration Example
# Copy this file to application.properties and update with your actual credentials

spring.application.name=e-library

# Server Configuration
server.port=8081

# Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/e_library?allowPublicKeyRetrieval=true&useSSL=false
spring.datasource.username=YOUR_MYSQL_USERNAME
spring.datasource.password=YOUR_MYSQL_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# H2 Console (for development/testing)
spring.h2.console.enabled=false
spring.h2.console.path=/h2-console

# View Configuration (JSP)
spring.mvc.view.prefix=/WEB-INF/views/
spring.mvc.view.suffix=.jsp

# File Upload Configuration
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB

# Razorpay Payment Gateway Configuration
# Get your keys from https://dashboard.razorpay.com/app/website-app-settings/api-keys
razorpay.key.id=YOUR_RAZORPAY_KEY_ID
razorpay.key.secret=YOUR_RAZORPAY_KEY_SECRET

# Logging Configuration (optional)
logging.level.root=INFO
logging.level.com.example.e_library=DEBUG
logging.file.name=logs/e-library.log
